<ul class="{{ menu_classes|join(' ') }}">
	{% for item in menu.items %}
		<li class="nav-item menu-item-root {{ item.classes|join(' ') }}">
			{% if item.children %}
				<a class="nav-link dropdown-toggle" href="{{ item.link }}">{{ item.title }}</a>
				<div class="dropdown-menu mt-0">
					{% for child in item.children %}
						<a class="dropdown-item" href="{{ child.link }}">{{ child.title }}</a>
					{% endfor %}
				</div>
			{% else %}
				<a class="nav-link" href="{{ item.link }}">{{ item.title }}</a>
			{% endif %}
		</li>
	{% endfor %}
</ul>
