{% if not pagination %}
	{% set pagination = posts.pagination %}
{% endif %}

<div class="pagination my-3">
	{% if pagination.prev %}
		<a class="prev {{ pagination.prev.link|length ? '' : 'invisible' }}" href="{{ pagination.prev.link }}">&lt; PREV</a>
	{% endif %}
    <span class="pagination-pages">
	{% for page in pagination.pages %}
		{% if page.link %}
			<a class="{{ page.class }}" href="{{ page.link }}">{{ page.title }}</a>
		{% else %}
			<span aria-current="page" class="{{ page.class }}">{{ page.title }}</span>
		{% endif %}
	{% endfor %}
    </span>
	{% if pagination.next %}
		<a class="next {{ pagination.next.link|length ? '' : 'invisible' }}" href="{{ pagination.next.link }}">NEXT &gt;</a>
	{% endif %}
</div>
